#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>



int main() {
    char word[15000],*p,alpha,final[15000];
    fgets(word,15000,stdin);
    if(p=strchr(word,'\n'))
    {
        *p='\0';
    }
    int len= strlen(word);

    //divide
    for(int i=0;i<len;i+=len/2)
    {
        //rotate
        int sum = 0;;
        for(int x=0;x<len/2;x++)
        {
          sum += word[i+x]- 65; // get the total index of the alpha
        }
        for(int x=0;x<len/2;x++)
        {
            int index = word[i+x]-65; // get the index of alpha
            int addi = index + sum; // total increment
            int multiple = (addi)/26; // check if there is a loop, e.g A + 26 -> A
            word[i+x] = (addi-multiple*26) +65; // change the letter based on the increment
        }
    }

    printf("%s\n",word);
    for(int i=0;i<len/2;i++)
    {
        //rotate

        printf("%d\n",i+len/2);
        int incre = word[i] -65 + word[i+len/2]-65;
        if(incre>=26)
        {
            incre-= 26;
        }

        final[i]= incre + 65;
        printf("%c + %c-> %c %d\n",word[i],word[i+len/2],final[i],incre);
    }
    printf("%s\n",final);

    return 0;
}
